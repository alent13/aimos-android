        android:id="@+id/auth_password_show_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_ui_rounded"
        android:padding="4dp"
        android:src="@drawable/show_password"
        android:tint="@color/white"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/auth_password_layout"/>-->

    <Button
        android:id="@+id/auth_login_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_ui_rounded"
        android:fontFamily="sans-serif-light"
        android:text="Войти"
        android:textSize="20sp"
        android:layout_below="@+id/auth_password_layout"/>

    <TextView
        android:id="@+id/auth_key_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:text="@string/update_keys_text"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/transparent_white"
        android:layout_above="@+id/auth_registration_btn"/>

    <Button
        android:id="@+id/auth_registration_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/bg_ui_rounded"
        android:fontFamily="sans-serif-light"
        android:text="Регистрация"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/auth_login_btn"
        android:layout_alignStart="@+id/auth_login_btn" />
</RelativeLayout>
